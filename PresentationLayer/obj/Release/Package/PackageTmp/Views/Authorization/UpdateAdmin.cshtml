
@model EntityLayer.Concrete.Admin
@{
                /**/

                ViewBag.Title = "AddAdmin";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>  Admin Yeniləmə</h2>

@using (Html.BeginForm("UpdateAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })

        @Html.Label("Mail");
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName)
        <br />

        @Html.Label("Şifrə")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword)

        <br />

        @Html.Label("Səlahiyyəti seçin")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminRole)
        <br />
        <button class="btn btn-info" id="btn">Yenilə</button>
    </div>
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script>
    $('#btn').click(function () {
        swal("Təşəkkürlər!", "Yenilənmə uğurla yerinə yetirildi.", "Success)")
    });
</script>

