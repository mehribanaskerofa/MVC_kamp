@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<script src="~/Scripts/jquery-3.3.1.js"></script>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni kategoriya əlavə et</h1>
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategory ad");
        @Html.TextBoxFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        
        @Html.Label("Aciqlama")
        @Html.TextBoxFor(x => x.CategoryDescription)
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <br />
        
        <button class="btn btn-danger" id="Add" onclick="return cvb()">Əlavə et</button>
    </div>
}

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    function cvb() {
        if ($("#Add").val() == "") {
            swal("Zəhmət olmasa xanaları doldurun !");
            return false;
        }
        else {
            swal("Əla!", "Əməliyyat yerinə yetirildi!", "Təşəkkürlər...");
            return true;
        } 
    }
    //$('Add').click(function () {
