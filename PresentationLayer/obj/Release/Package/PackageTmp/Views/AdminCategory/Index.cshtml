@using EntityLayer.Concrete;
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1> Categories</h1>
<br />
<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori adi</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Yenilə</th>
        <th>Başlıqlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-warning">Yenilə</a></td>
            <td><a href="/Heading/HeadingsByCategoryID/@item.CategoryID" class="btn btn-primary">Başlıqlar</a></td>

        </tr>
    }

</table>
<br />
<a href="/AdminCategory/AddCategory/" class="btn btn-danger">Əlavə et</a>
